{% extends 'layouts/default.njk' %}
{% block body %}
    {% include 'partials/dashboard.njk' %}
    <section id="main">
      <div class="container">
        <header>
          <h2>Meus projetos ({{projects.length}})</h2>
          <div class="addon">
            <form action="/app/projects/create" method="post">
              <input type="text" name="name" placeholder="Novo projeto">
              <button type="submit" class="btn">
                <img src="/img/plus.svg">
              </button>
            </form>
          </div>
        </header>
        <section id="content">
          <div class="project-list">
            <ul style="list-style-type:none">
                {% for project in projects %}
                <li style="margin-top: 10px">
                    <a href="/app/projects/{{project.id}}">{{project.name}}</a>
                </li>
                {% endfor %}
            </ul>
          </div>
        </section>
      </div>
      </div>
    </section>
  {% endblock %}
